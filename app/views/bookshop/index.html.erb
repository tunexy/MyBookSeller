
<h1>Books for Sale</h1> 
<% if !@books.empty? %>
	<% @books.each do |book| %>
	<h3><%= product.title %></h3>
		<h3><%= book.author %></h3>
		<h3><%= book.kind %></h3>
		<%= euro(book.price) %>
		<%= button_to 'Add to Cart', lineitems_path(book_id: book) %>
	<% end %> 
<% else %>
<p>There are no products for sale</p> 
<% end %>