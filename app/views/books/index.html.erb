
<h1>Listing Books</h1>

<%= form_tag books_path, :method => "get" do %> 
  <%= text_field_tag(:search, params[:search]) %> 
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Category</th>
      <th>Kind</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.category %></td>
        <td><%= book.kind %></td>
        <td><%= book.price %></td>
        <td><%= book.quantity %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="/basket/<%= book.id %>"> Add to Basket</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
